extends base
block content
  nav.adminToolbar
    ul#adminToolbar-menu.menu.admin-toolbar.toolbar
      li#new-menu-item.adminToolbar-menu-item
        a#addBtn.adminToolbar-menu-link(title='Create menu ...')
          | Create
          i.icon-plus
  aside#messages.row
  article.admin-body.row
    // PAGE_BODY_START
    article.content
      table.tabular
        thead
          tr
            th Name
            th Type
            th Description
        tbody
          each menu in menuList
            tr.content-list-item.content-list-item-published.content-type-Block.Content
              td
                a(href='/content/show/53684fe1697d4fd00e000001')=menu.name
              td=menu.type
              td=menu.description
    // PAGE_BODY_END
  footer.row
    // Admin Footer
    .col1
      | Administration
  script.
    $('#addBtn').click(function(){
      var json = {};
      var mdata = {};
      var url = '/js/menu.json';
      $.getJSON(url, function(data) {
        mdata=data.data;
        for(var i =0; i<mdata.length; i++){
          json['content']=mdata[i];
          console.log(json);
          $.ajax({
            type: "POST",
            url: '/menu/add',
            data: json,
            success: function (data, textStatus){
              if(data.success){
                window.location('/menus/hw');
              } else {}
            }
          });
        }
        
      });     
    });